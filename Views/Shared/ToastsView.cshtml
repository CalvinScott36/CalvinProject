<div id="dangerToast" class="toast float-right alert-dark" role="alert" aria-live="assertive" aria-atomic="true" data-delay="5000">
    <div class="toast-header bg-primary text-white">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <strong class="mr-auto"> Error</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <template v-if="errorMessage && errorMessage.length > 0">
            <ul v-for="item in errorMessage">
                <li class="text-danger">{{item}}</li>
            </ul>
        </template>
    </div>
</div>



<div id="successToast" class="toast float-right alert-dark" role="alert" aria-live="assertive" aria-atomic="true" data-delay="5000">
    <div class="toast-header bg-primary text-white">
        <i class="fa fa-check-circle" aria-hidden="true"></i> <strong class="mr-auto"> Success </strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <template v-if="successMessage && successMessage.length > 0">
            <ul v-for="item in successMessage">
                <li class="text-success">{{item}}</li>
            </ul>
        </template>
    </div>
</div>
